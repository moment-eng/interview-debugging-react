{
    "rules": {
        "spelling": {
            "language": "en",
            "skipPatterns": ["JavaScript"],
            "wordDefinitionRegexp": "/[\\w']+/g",
            "suggestCorrections": true
        },
        "write-good": {
            "passive": true,
            "thereIs": true,
            "illusion": true,
            "weasel": true,
            "so": true,
            "adverb": true,
            "tooWordy": true,
            "cliches": true,
            "eprime": false
        },
        "alex": {
            "allow": []
        },
        "stop-words": {
            "defaultWords": true,
            "skip": [],
            "words": [
                ["blacklist", "denylist"],
                ["whitelist", "allowlist"]
            ]
        }
    }
}
